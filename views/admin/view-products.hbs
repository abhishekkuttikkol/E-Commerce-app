<section>
  <div class="container">
    <div class="row mt-4">
      <a class="btn btn-success ml-auto" href="/admin/add-product">Add Products</a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th scope="row">1</th>
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.description}}</td>
            <td><img
                style="width: 50px;height: 50px;"
                src="/product-images/{{this._id}}.jpg"
                alt=""
              /></td>
            <td>
              <a
                class="btn btn-primary ml-auto mb-1"
                href="/admin/edit-product/{{this._id}}"
              >Edit</a>
              <a
                class="btn btn-danger ml-auto mb-1"
                href="/admin/delete-product/{{this._id}}"
                onclick="return confirm('Are you sure want to delete {{this.name}} ?')"
              >Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>